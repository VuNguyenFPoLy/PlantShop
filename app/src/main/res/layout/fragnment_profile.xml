<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="25dp"
        android:fontFamily="@font/lato"
        android:textColor="@color/black"
        android:text="PROFILE" />

    <LinearLayout
        android:padding="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vũ Nguyễn"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/lato"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="vunvps36442@fpt.edu.vn"
                android:fontFamily="@font/lato"
                android:textColor="@color/black"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp">

        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:inputType="text"
            android:hint="Chung" />

        <TextView
            android:id="@+id/tv_EditInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/lato"
            android:layout_marginTop="10dp"
            android:text="Chỉnh sửa thông tin" />

        <TextView
            android:id="@+id/tv_HandbookPlant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Cẩm nang cây trồng" />

        <TextView
            android:id="@+id/tv_History"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="Lịch sử giao dịch" />

        <TextView
            android:id="@+id/tv_Help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:text="Trợ giúp" />

        <EditText
            android:id="@+id/editTextText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Tài khoản và bảo mật"/>

        <TextView
            android:id="@+id/tv_ChangePass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginTop="10dp"
            android:text="Đổi mật khẩu" />

        <TextView
            android:id="@+id/tv_LogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textColor="#FF0000"
            android:layout_marginTop="20dp"
            android:textSize="18dp"
            android:text="Đăng xuất" />
    </LinearLayout>

</LinearLayout>